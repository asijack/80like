<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Forever" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Appbar背景色 -->
        <item name="colorPrimary">@color/as_theme_color</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/as_status_bar_color</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/as_accent_color</item>
        <!--避免控件顶到状态栏上-->
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:textAllCaps">false</item>

        <!--禁用多个View同时接收触发事件-->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <!-- 无ActionBar主题 -->
    <style name="Theme.Forever.NoActionBar" parent="Theme.Forever">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

</resources>